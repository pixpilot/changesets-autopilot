{
  "name": "changesets-autopilot",
  "description": "GitHub Action for automating changesets releases",
  "version": "0.0.0",
  "author": "m.doaie <m.doaie@hotmail.com>",
  "type": "module",
  "private": true,
  "homepage": "https://github.com/pixpilot/changesets-autopilot",
  "repository": {
    "type": "git",
    "url": "https://github.com/pixpilot/changesets-autopilot.git"
  },
  "bugs": {
    "url": "https://github.com/pixpilot/changesets-autopilot/issues"
  },
  "keywords": [
    "actions",
    "typescript",
    "changesets"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "preinstall": "npx only-allow npm",
    "bundle": "npm run format:write && npm run package",
    "ci-test": "vitest run && npm run coverage",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint . --fix",
    "typecheck": "tsc --noEmit",
    "tsc:watch": "tsc --noEmit --watch",
    "local-action": "npx @github/local-action . src/index.ts .env",
    "package": "npx rollup --config rollup.config.js",
    "package:watch": "npm run package -- --watch",
    "test": "vitest run",
    "test:watch": "vitest --run --watch",
    "test:ui": "vitest --ui",
    "all": "npm run format:write && npm run lint && npm run typecheck && npm run test && npm run coverage && npm run package",
    "build": "rollup -c",
    "prepare": "husky install"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@changesets/cli": "^2.29.5",
    "@changesets/get-release-plan": "^4.0.13",
    "@conventional-commits/parser": "^0.4.1",
    "@manypkg/get-packages": "^3.1.0",
    "@octokit/rest": "^22.0.0",
    "conventional-commits-parser": "^6.2.0",
    "simple-git": "^3.28.0",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@commitlint/types": "^19.8.1",
    "@eslint/compat": "^1.3.0",
    "@github/local-action": "^3.2.1",
    "@pixpilot/dev-config": "^1.0.21",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-typescript": "^12.1.3",
    "@types/conventional-commits-parser": "^5.0.1",
    "@types/node": "^24.0.4",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "cross-env": "^10.0.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.13.5",
    "eslint-plugin-prettier": "^5.4.1",
    "husky": "^9.1.7",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.4.2",
    "rollup": "^4.43.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  }
}
